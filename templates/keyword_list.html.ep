        <dl>
          % if ( $item->{initial} ne $pre3 ) {
          <dt>
            <%= $item->{initial}  %>
          </dt>
          % $pre3 = $item->{initial};
          % }
          <dd>
            <%= link_to "/keyword/$item->{name}" => begin %><%= $item->{name} %><% end %>
          </dd>
        </dl>
      % }
  </div>
</div>



