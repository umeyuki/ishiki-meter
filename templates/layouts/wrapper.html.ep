            <table class='table table-bordered table-hover'>
              <tr class="info">
                <td colspan="2">
                  人気意識ワード
                </td>
              </tr>
              % for my $keyword ( @$keyword_ranking ) {
              <tr data-href="/keyword/<%= $keyword->{name} %>">
