        <div class="navbar">
          <div class="navber">
            <div class="navbar-inner">
              <div class="container">
                <a href="/" class="brand">意識メーターβ</a>
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                <div class="nav-collapse collapse">
                  <ul class="nav">
                    % if ( '/recent' eq $request_uri ) {
                    <li class="active">
                    % } else {
                    <li class="">
                    % }
                      <a href="/recent">新着意識</a>
                    </li>
                    % if ( '/ranking' eq $request_uri ) {
                    <li class="active">
                    % } else {
                    <li class="">
                    % }
                      <a href="/ranking">意識ランキング</a>
                    </li>
                    % if ( '/wiki' eq $request_uri ) {
                    <li class="active">
                    % } else {
                    <li class="">
                    % }
                      <a href="/wiki">意識の高いキーワード</a>
                    </li>
                   </ul>
                  <ul class="nav pull-right">
                    <li class="dropdown">
                      <a href="" class="dropdown-toggle" data-toggle="dropdown">
                        意識の高さを調べる
                        <span class="caret"></span>
                      </a>
                      <ul class="dropdown-menu">
                        <li>
                          <a href="/auth/auth_twitter/">Twitterログイン</a>
                        </li>
                      </ul>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
